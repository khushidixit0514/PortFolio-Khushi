<script>

  //1ST PART
  // Simple toggle functionality for visited places
    document.addEventListener('DOMContentLoaded', function() {
      const visitedPlaces = {
        delhi: "Delhi - Visited in 2019",
        mumbai: "Mumbai - Visited in 2020", 
        bangalore: "Bangalore - Visited in 2021"
      };
      
      // Toggle city names on click and position info box
      document.querySelectorAll('.state.visited').forEach(state => {
        state.addEventListener('click', function(e) {
          const infoBox = document.getElementById('info-box');
          const cityName = document.getElementById('city-name');
          
          // Position near clicked point
          const x = e.clientX;
          const y = e.clientY;
          infoBox.style.left = `${x}px`;
          infoBox.style.top = `${y}px`;
          
          cityName.textContent = visitedPlaces[this.id];
          infoBox.style.display = 'block';
          
          // Close when clicking anywhere else
          document.addEventListener('click', function closeBox(e) {
            if (!e.target.closest('.state') && !e.target.closest('.info-box')) {
 infoBox.style.display = 'none';
              document.removeEventListener('click', closeBox);
            }
          });
        });
      });
    });


//2ND PART

